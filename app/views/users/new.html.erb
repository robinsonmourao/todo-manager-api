<%= form_with(model: @user, url: signup_path) do |form| %>
    <div class="form-user-textbox">
        <%= form.label :username %>
        <%= form.text_field :username, placeholder: "Nome" %>

        <%= form.label :email %>
        <%= form.text_field :email, placeholder: "Email" %>

        <%= form.label :password_digest %>
        <%= form.password_field :password_digest, placeholder: "Senha" %>
    </div>
    <div>
        <%= form.submit "Cadastrar"%>
    </div>
<% end %>
