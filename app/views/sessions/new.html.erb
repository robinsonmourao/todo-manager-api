<% if @notice.present? %>
    <div class="notification is-link is-light"><%= @notice %></div>
<% end %>

<%= form_with(model: @session, url: login_send_path, method: :post) do |form| %>
    <div class="form-session-textbox">

        <%= form.label :email %>
        <%= form.text_field :email, placeholder: "Email" %>

        <%= form.label :password %>
        <%= form.password_field :password, placeholder: "Senha" %>
    </div>

    <div>
        <%= form.submit "Logar" %>
    </div>
    <% end %>